<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="@drawable/bg_chat_bubble_outgoing"
        android:maxWidth="300dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/replyLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_reply_outgoing"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="?attr/colorOnPrimaryContainer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/replySenderNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="You replied to Ruhid" />

                <TextView
                    android:id="@+id/replyMessagePreviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="14sp"
                    tools:text="This is the message being replied to..." />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/timestampTextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/replyLayout"
            tools:text="This is a very long outgoing message example." />

        <TextView
            android:id="@+id/timestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/messageTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/messageTextView"
            tools:text="20:47" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- YENÄ°: ReaksiyalarÄ± gÃ¶stÉ™rÉ™n bÃ¶lÃ¼m -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/reactionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="-12dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:flexWrap="wrap"
        tools:visibility="visible">

        <!-- Reaksiyalar bura proqrammatik olaraq É™lavÉ™ edilÉ™cÉ™k -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_reaction"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_margin="2dp"
            android:textSize="14sp"
            tools:text="ðŸ‘ 2" />
    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>

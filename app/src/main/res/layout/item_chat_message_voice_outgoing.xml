<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/messageContentContainer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="@drawable/bg_chat_bubble_outgoing"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/replyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_reply_outgoing"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="?attr/colorOnPrimaryContainer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/replySenderNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="You replied to Ruhid" />

                <TextView
                    android:id="@+id/replyMessagePreviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="14sp"
                    tools:text="Voice Message" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mediaControlButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_play_arrow"
                app:tint="?attr/colorOnPrimaryContainer"
                tools:src="@drawable/ic_pause"
                android:contentDescription="Play or Pause Voice Message"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/waveformView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                app:lottie_autoPlay="false"
                app:lottie_colorFilter="?attr/colorOnPrimaryContainer"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/voice" />

            <TextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="12sp"
                tools:text="0:15" />

            <TextView
                android:id="@+id/speedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="1.5x" />
        </LinearLayout>

        <TextView
            android:id="@+id/timestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="12sp"
            tools:text="14:55" />

    </LinearLayout>

    <!-- YENİ: Reaksiyaları göstərən bölüm -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/reactionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="-12dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:flexWrap="wrap"
        tools:visibility="visible"/>

</LinearLayout>
